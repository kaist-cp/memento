ll-recoverable-nopsync-update: main_linked_list.cpp RecoverableLinkedListTracking.h RecoverableLinkedListCapsules.h Utilities.h p_utils.h
	g++ -lpmem -lnuma -pthread -std=c++11 -mcx16 $(CFLAGS) $(ARGS) -DMCX16 -DMANUAL_FLUSH -DPSYNC_OFF -DLOW_PWBS -DMED_PWBS -DHIGH_PWBS -O3 main_linked_list.cpp -o bin/LLRecoverable_nopsync_exp_update

